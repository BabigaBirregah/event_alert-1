<script src="/js/jquery.datetimepicker.full.js"></script>
<script type="text/javascript">
	$(function(){
		$( "#id_create_event_tab" ).trigger( "click" );		
	});

	var map;
	var markers = [];

	function initMap() {
	  	var troyes = {lat: 48.2973451, lng: 4.0744009};

		map = new google.maps.Map(document.getElementById('map'), {
		    zoom: 8,
		    center: troyes,
		    mapTypeId: google.maps.MapTypeId.TERRAIN
		});

	  	map.addListener('click', function(event) {
	    	addMarker(event.latLng);
	  	});
	}

	function addMarker(location) {
	  	marker = new google.maps.Marker({
	    	position: location,
	    	map: map
	  	});
	  	deleteMarkers();
	  	$('#place').val(location.lat()+";"+location.lng());
	  	markers.push(marker);
	}

	function setMapOnAll(map) {
	  	for (var i = 0; i < markers.length; i++) {
	    	markers[i].setMap(map);
	  	}
	}

	function clearMarkers() {
	  	setMapOnAll(null);
	}

	function deleteMarkers() {
	  	clearMarkers();
	  	markers = [];
	}

	google.maps.event.addDomListener(window, 'load', initMap);

	/* Mask DateTimePicker */
	$('#datetimepicker_mask').datetimepicker({
		mask:'9999/19/39 29:59'
	});

	/* Multiple Form Fields */
	$(document).ready(function(){
	    var next = 1;
	    $(".add-more").click(function(e){
	        e.preventDefault();
	        var addto = "#field" + next;
	        next = next + 1;
	        var newIn = '<br /><br /><input autocomplete="off" class="span3" id="field' + next + '" name="type_alert' + next + '" type="text" data-provide="typeahead" data-items="8">';
	        var newInput = $(newIn);
	        $(addto).after(newInput);
	        $("#field" + next).attr('data-source',$(addto).attr('data-source'));
	        $("#count").val(next);  
	    });
	});
</script>